generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  // url      = env("DATABASE_URL")
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

enum Role {
  ADMIN
  ACCOUNTANT
  ADMINISTRATION
  REVIEWER
}

model User {
  id             String          @id @default(uuid())
  name           String
  role           Role
  phone          String          @unique
  email          String          @unique
  password       String
  passwordResets PasswordReset[] // Relation to PasswordReset
}

model PasswordReset {
  id        String   @id @default(uuid())
  userId    String
  token     String
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId], name: "user_id_idx")
}
